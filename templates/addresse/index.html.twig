{% extends 'base.html.twig' %}

{% block title %}Addresse index{% endblock %}

{% block body %}
    <h1>Addresse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StreetNumber</th>
                <th>Street</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Country</th>
                <th>PhoneNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for addresse in addresses %}
            <tr>
                <td>{{ addresse.id }}</td>
                <td>{{ addresse.streetNumber }}</td>
                <td>{{ addresse.street }}</td>
                <td>{{ addresse.zipcode }}</td>
                <td>{{ addresse.city }}</td>
                <td>{{ addresse.country }}</td>
                <td>{{ addresse.phoneNumber }}</td>
                <td>
                    <a href="{{ path('app_addresse_show', {'id': addresse.id}) }}">show</a>
                    <a href="{{ path('app_addresse_edit', {'id': addresse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_addresse_new') }}">Create new</a>
{% endblock %}
