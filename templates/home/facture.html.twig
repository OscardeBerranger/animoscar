<meta charset="UTF-8">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
<h1>Facture</h1>


<h2>Animoscar</h2>
<p>Nous vous remercions pour votre commande</p>

<hr>

<div class="container">
    <div class="row">
        <div class="col">
            <strong>Facturé à</strong>
            <p>{{ order.profile.lastname }} {{ order.profile.firstname }}</p>
            <p>{{ order.profile.ofUser.email }}</p>
            <p>{{ order.address.phoneNumber }}</p>
            {% for address in order.profile.addresses %}
                <p>{{ address.streetNumber }} {{ address.street }}</p>
                <p>{{ address.zipcode }} {{ address.country }}</p>
            {% endfor %}
        </div>
        <div class="col">
            <strong>Détails</strong>
            <p>{{ order.orderItems.count }} produit commandé</p>
        </div>
        <div class="col">
            <strong>Paiement</strong>
            <p>{{ order.createdAt|date("d/m/Y") }}</p>
            <p>{{ order.total }} €</p>
        </div>
    </div>



</div>

<h1>Article</h1>

<table class="table">
    <thead>
    <tr>
        <th>Article</th>
        <th>Quantité</th>
        <th>prix</th>
        <th>Montant</th>
    </tr>
    </thead>
    <tbody>
    {% for item in order.orderItems %}
    <tr>
        <td>{{ item.product.name }}</td>
        <td>{{ item.quantity }}</td>
        <td>{{ item.product.price }} €</td>
        <td>{{ item.product.price * item.quantity }} €</td>
    </tr>
    {% endfor %}
    </tbody>
</table>