{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        {% if app.user.profile.addresses is not empty %}

            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Séléctionnez une addresse
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    {% for address in app.user.profile.addresses %}
                        <li>
                            <a class="m-3 dropdown-item" href="{{ path('app_order_payment', {id:address.id}) }}">{{ address.streetnumber }} {{ address.street }} {{ address.zipcode }} {{ address.city }} {{ address.country }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

        {% else %}
            <h4>Vous devez ajouter une <a href="{{ path('app_addresse_new') }}">addresse à votre profile</a></h4>
        {% endif %}
    </div>

{% endblock %}






