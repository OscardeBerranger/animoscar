{% extends 'base.html.twig' %}

{% block body %}

<div class="m-5">
    {% for produit in produits %}

        <div class="card row m-3">
            <h3> {{ produit.name }} </h3>
            <p> {{ produit.description }} </p>
            <p> {{ produit.price }} </p>
            <a href="{{ path('produit_show', {id:produit.id}) }}" class="btn btn-secondary">See</a>
        </div>

    {% endfor %}
</div>

{% endblock %}
